node
{
     def mavenHome = tool name: "maven3.6.3"
     
  stage('CheckOutCode') 
  {
  git branch: 'development', credentialsId: '39455f84-7623-45c3-9717-0b5fd14598e2', url: 'https://github.com/sowndarya41195/maven-web-application.git'
  }
 
   
  stage('Build')
   {
   sh "${mavenHome}/bin/mvn clean package"
   }
   
   stage('ExecuteSonarQubeReport')
    {
     sh "${mavenHome}/bin/mvn sonar:sonar"
    }
	
    stage('UploadArtifactIntoNexus')
     {
      sh "${mavenHome}/bin/mvn deploy"
     }
   
   stage('DeployAppIntoTomcat')
   {
deploy adapters: [tomcat9(credentialsId: '79803418-81bb-4bb4-9db2-8750cc1560cc', path: 'maven-web-application.war', url: 'http://13.233.65.238/')], contextPath: 'maven-web-aplication', onFailure: false, war: '**/*.war'   }
}
}
